<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>

<window title="hello.world" flat="true" color="transparent">
	<!-- Play Button -->
	<button center="true" anchor="bl">
		<label>
			<text>gui.mainMenu.play</text>
			<font style="1" size="42">OpenSans</font>
		</label>
		
		<handler>mainmenu.play</handler>
		
		<size>
			<x>{textSize}</x>
			<y>48</y>
		</size>
		<pos>
			<x>0</x>
			<y dynamic="true">0.4f</y>
		</pos>
	</button>
	
	<!-- Quit Button -->
	<button center="true" anchor="bl">
		<label>
			<text>gui.mainMenu.quit</text>
			<font style="1" size="42">OpenSans</font>
		</label>
		
		<handler>mainmenu.quit</handler>
		
		<size>
			<x>{textSize}</x>
			<y>48</y>
		</size>
		<pos>
			<x>0</x>
			<y dynamic="true">0.2f</y>
		</pos>
	</button>
	
	<!-- Title -->
	<text center="true" anchor="tl">
		<label>
			<text>gui.mainMenu.title</text>
			<font style="1" size="42">OpenSans</font>
		</label>
		
		<size>
			<x>{textSize}</x>
			<y>48</y>
		</size>
		<pos>
			<x>0</x>
			<y>0</y>
		</pos>
	</text>
	
	<!-- Build -->
	<text center="false" anchor="bl">
		<label>
			<text>gui.mainMenu.build</text>
			<font style="1" size="12">OpenSans</font>
		</label>
		
		<size>
			<x>0</x>
			<y>16</y>
		</size>
		<pos>
			<x>0</x>
			<y>0</y>
		</pos>
	</text>
</window>