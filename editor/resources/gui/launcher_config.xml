<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>

<window title="hello.world" flat="true" color="dimGrey">
	<!-- Ironflask Title -->
	<box center="true" anchor="tl">
		<size>
			<x>398</x>
			<y>75</y>
		</size>
		<pos>
			<x>201</x>
			<y>25</y>
		</pos>
		
		<sprite>ironflask_logo</sprite>
	</box>
	
	<text center="true" anchor="tl">
		<label>
			<text>launcher.gui.config.title</text>
			<font style="1" size="14">OpenSans</font>
		</label>
		
		<size>
			<x>{textSize}</x>
			<y>48</y>
		</size>
		<pos>
			<x>0</x>
			<y>125</y>
		</pos>
	</text>
	<button center="false" anchor="br">
		<label>
			<text>launcher.gui.config.next</text>
			<font style="1" size="24">OpenSans</font>
		</label>
		
		<handler>launcher.config.next</handler>
		
		<size>
			<x>{textSize}</x>
			<y>28</y>
		</size>
		<pos>
			<x>{textSize}+25</x>
			<y>26+25</y>
		</pos>
		
		<sprite>Ironflask_BlackGUI.Button</sprite>
	</button>
	
	<!-- Input -->
	<list anchor="tl">
		<size>
			<x>300</x>
			<y>300</y>
		</size>
		<pos>
			<x>25</x>
			<y>180</y>
		</pos>
				
		<box center="false" anchor="tl">
			<size>
				<x dynamic="true">1</x>
				<y dynamic="true">1</y>
			</size>
			<pos>
				<x>0</x>
				<y>0</y>
			</pos>
		</box>
	</list>
</window>